datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// ==========================================================
// ⚠️ MODEL BARU UNTUK MENGELOLA KATEGORI SECARA TERPISAH
// ==========================================================
model Category {
  id    String @id @default(uuid())
  name  String @unique
  menus Menu[] // Relasi one-to-many ke model Menu
}

model Table {
  id        String   @id @default(uuid())
  number    Int
  qrCode    String   @unique
  orders    Order[]
}

model Menu {
  id          String    @id @default(uuid())
  name        String
  price       Int
  image       String?
  // BIDANG LAMA 'category String?' DIHAPUS DAN DIGANTI DENGAN RELASI KUAT:
  category    Category @relation(fields: [categoryId], references: [id])
  categoryId  String
  items       OrderItem[]
}

model Order {
  id            String           @id @default(uuid())
  table         Table            @relation(fields: [tableId], references: [id])
  tableId       String
  status        OrderStatus      @default(PENDING)
  paymentMethod PaymentMethod    @default(CASH)
  paymentStatus PaymentStatus    @default(UNPAID)
  totalPrice    Int
  createdAt     DateTime         @default(now())
  items         OrderItem[]
}

model OrderItem {
  id       String  @id @default(uuid())
  order    Order   @relation(fields: [orderId], references: [id])
  orderId  String
  menu     Menu    @relation(fields: [menuId], references: [id])
  menuId   String
  qty      Int
  note     String?
  price    Int
}

enum OrderStatus {
  PENDING
  PREPARING
  DONE
}

enum PaymentMethod {
  CASH
  NONCASH
}

enum PaymentStatus {
  UNPAID
  PAID
}

model Admin {
  id       String @id @default(uuid())
  username String @unique
  password String // Hashed password
  name     String
}