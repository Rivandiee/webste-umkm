datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Category {
  id    Int    @id @default(autoincrement()) // Diubah dari String/uuid
  name  String @unique
  menus Menu[]
}

model Table {
  id     Int     @id @default(autoincrement()) // Diubah dari String/uuid
  number Int
  qrCode String  @unique
  orders Order[]
}

model Menu {
  id         Int         @id @default(autoincrement()) // Diubah dari String/uuid
  name       String
  price      Int
  image      String?
  category   Category    @relation(fields: [categoryId], references: [id])
  categoryId Int // Diubah dari String
  items      OrderItem[]
}

model Order {
  id            Int           @id @default(autoincrement()) // Diubah dari String/uuid
  table         Table         @relation(fields: [tableId], references: [id])
  tableId       Int // Diubah dari String
  status        OrderStatus   @default(PENDING)
  paymentMethod PaymentMethod @default(CASH)
  paymentStatus PaymentStatus @default(UNPAID)
  totalPrice    Int
  createdAt     DateTime      @default(now())
  items         OrderItem[]
}

model OrderItem {
  id      Int     @id @default(autoincrement()) // Diubah dari String/uuid
  order   Order   @relation(fields: [orderId], references: [id])
  orderId Int // Diubah dari String
  menu    Menu    @relation(fields: [menuId], references: [id])
  menuId  Int // Diubah dari String
  qty     Int
  note    String?
  price   Int
}

model Admin {
  id       Int    @id @default(autoincrement()) // Diubah dari String/uuid
  username String @unique
  password String
  name     String
}

enum OrderStatus {
  PENDING
  PREPARING
  DONE
}

enum PaymentMethod {
  CASH
  NONCASH
}

enum PaymentStatus {
  UNPAID
  PAID
}